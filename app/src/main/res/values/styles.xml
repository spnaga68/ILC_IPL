    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme_tool" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/gray_divider</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">150dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme_tool_exp" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#00ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">150dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DashboardTitle">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/main_title_color</item>
    </style>
