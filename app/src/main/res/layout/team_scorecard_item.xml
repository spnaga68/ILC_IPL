<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="8">

        <TextView
            android:id="@+id/batsman_txt"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:text="Naga"
            android:textColor="@color/link_blue" />

        <TextView
            android:id="@+id/runs_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="0" />

        <TextView
            android:id="@+id/balls_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="1" />

        <TextView
            android:id="@+id/fours_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="bottom|center_horizontal"
            android:text="2" />

        <TextView
            android:id="@+id/six_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:layout_weight="0.8"
            android:text="3" />

        <TextView
            android:id="@+id/strike_rate_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="bottom|center_horizontal"
            android:text="233.33" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/out_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="top"
            android:layout_gravity="top"
            android:text="c Naga b Rajan" /></LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_grey"/>
</LinearLayout>