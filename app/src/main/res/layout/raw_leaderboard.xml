<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <realmstudy.view.CircleImageView
            android:id="@+id/img_player"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:id="@+id/linearLayoutGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <realmstudy.view.TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/sp_18" />

            <realmstudy.view.TextView
                android:id="@+id/txt_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:asset_font_file_name="@string/font_sourcesans_pro_regular"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <realmstudy.view.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:civ_border_color="@color/dark_gray"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp"
                android:visibility="visible"
                app:civ_fill_color="@color/offwhite"
                android:src="@color/light_grey" />

            <realmstudy.view.TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:asset_font_file_name="@string/font_sourcesans_pro_semibold"
                android:text="1"
                android:visibility="visible"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#eae7e7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:visibility="visible">

        <realmstudy.view.TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:asset_font_file_name="@string/font_sourcesans_pro_regular"
            android:paddingLeft="@dimen/dp_5"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout></LinearLayout></android.support.v7.widget.CardView>
